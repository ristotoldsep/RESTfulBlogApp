<%- include ("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">
		Edit "<%= blog.title %>"
	</div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> 
		<!-- Can't use PUT, not supported!!!, instead a cheat ?_method=PUT, also need npm packet method-overide-->
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>" required>
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>" required>
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" required><%= blog.body //textareas don't have value!!!! %></textarea>
		</div>
		<input class="ui primary inverted button" type="submit">
	</form>
</div>

<%- include ("partials/footer") %>
